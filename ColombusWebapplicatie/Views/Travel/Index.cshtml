@model IList<ColombusWebapplicatie.Models.Travel.Travel>

@{
    ViewBag.Title = "Reizen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="white-block">
    <h2>@ViewBag.Title</h2>
    <div class="container">
        <table cellspacing ="0" cellpadding="0" id="travels">
            <tr>
                <th>Titel</th>
                <th>Begindatum</th>
                <th>Einddatum</th>
            </tr>
            @if (Model != null && Model.Count > 0) {
                foreach (var travel in Model) {
                    <tr>
                        <td>@Html.ActionLink(travel.Title, "ViewTravel", new { id = travel.ID })</td>
                        <td>@travel.StartDate.Day-@travel.StartDate.Month-@travel.StartDate.Year</td>
                        <td>@travel.EndDate.Day-@travel.EndDate.Month-@travel.EndDate.Year</td>
                    </tr>
                }
            }
            else {
                <tr>
                    <td colspan="3">Er zijn geen reizen beschikbaar.</td>
                </tr>
            }
            <tr>
                <td></td>
                <td></td>
                <td class="button orange">@Html.ActionLink("Nieuw", "Create", "Travel")</td>
            </tr>
        </table>
    </div>
</div>